{% extends "layout.njk" %}

{% block content %}
    <form method="POST" action="/teachers" class="card">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9976614/500x500) no-repeat center center / cover"></section>

        <section class="details">

            <h3>NOVO PROFESSOR</h3>

            <div class="item">
                <div>Avatar URL</div>
                <input 
                type="url"
                name="avatar_url"
                placeholder="https://"
                required
                >
            </div>

            <div class="item">
                <div>Nome Completo:</div>
                <input 
                type="text"
                name="name"
                placeholder="Digite seu nome aqui"
                required
                >
            </div>

            <div class="item">
                <div>Data de Nascimento:</div>
                <input 
                type="date" 
                name="birth"
                required
                >
            </div>

            <div class="item">
                <div>Grau de escolaridade:</div>
                <select name="grade" required>
                    <option value="" disabled selected>Escolha uma opção</option>
                    <option value="medio">Ensino Médio Completo</option>
                    <option value="superior">Ensino Superior Completo</option>
                    <option value="mestrado">Mestrado</option>
                    <option value="doutorado">Doutorado</option>
                </select>
            </div>

            <div class="item">
                <div>Tipo de aula:</div>
                <div>
                    <span><input type="radio" name="class_type" id="distancia" value="À distancia"><label for="distancia">À Distância</label></span>

                    <span><input type="radio" name="class_type" id="presencial" value="Presencial"><label for="presencial">Presencial</label></span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação:</div>
                <div>
                    <input 
                    type="text"
                    name="lessons"
                    placeholder="matérias divididas por vírgula">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}