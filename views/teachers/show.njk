{% extends "layout.njk" %}

{% block head %}
    <title>Teachers - Private lessons</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section 
        class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>

        <section class="details">
            
            <h3>detalhes</h3>

            <div class="item">
                <div>Nome Completo</div> 
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div> 
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div> 
                <div>{{ teacher.grade }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div> 
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div> 
                <div>
                    {% for lesson in teacher.lessons %}
                    <span> {{ lesson }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde </div> 
                <div>{{ teacher.created_at }}</div>
            </div>
        </section>
    </div>
{% endblock content %}